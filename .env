###########################################################
###################### General Setup ######################
###########################################################

### Drivers ################################################

# All volumes driver
VOLUMES_DRIVER=local

# All Networks driver
NETWORKS_DRIVER=bridge

### Docker compose files ##################################

# Select which docker-compose files to include. If using docker-sync append `:docker-compose.sync.yml` at the end
COMPOSE_FILE=docker-compose.yml

# Change the separator from : to ; on Windows
COMPOSE_PATH_SEPARATOR=;

# Define the prefix of container names. This is useful if you have multiple projects that use laradock to have seperate containers per project.
COMPOSE_PROJECT_NAME=default

### Docker Host IP ########################################

# Enter your Docker Host IP (will be appended to /etc/hosts). Default is `10.0.75.1`
DOCKER_HOST_IP=localhost

### Windows Path ##########################################

# A fix for Windows users, to ensure the application path works
COMPOSE_CONVERT_WINDOWS_PATHS=1

### Environment ###########################################

# If you need to change the sources (i.e. to China), set CHANGE_SOURCE to true
CHANGE_SOURCE=false
SYSTEM_TIMEZONE=Asia/ShangHai

###########################################################
################ Containers Customization #################
###########################################################

### NGINX ################################################
NGINX_HOST_HTTP_PORT=80
NGINX_HOST_HTTPS_PORT=443
NGINX_APP_SRC=./www
NGINX_APP_DST=/var/www/app
NGINX_LOGS=./logs/nginx/
NGINX_CONF=./nginx/nginx.conf
NGINX_VHOST80_CONF=./nginx/.docker/default.conf
NGINX_START_SH=./nginx/.docker/start.sh
NGINX_LOGROTATE_CONF=./nginx/.docker/logrotate.d/


### PHP-FPM ################################################
PHP_FPM_WWW_CONF=./php-fpm/www.conf
PHP_INI=./php-fpm/php.ini
PHP_XDEBUG_INI=./php-fpm/20-xdebug.ini
PHP_LOGROTATE_CONF=./php-fpm/logrotate.d/

### MARIADB #################################################
MARIADB_VERSION=10.1.38
MARIADB_DATABASE=mariadb
MARIADB_USER=mariadb
MARIADB_PASSWORD=mariadb
MARIADB_PORT=3306
MARIADB_ROOT_PASSWORD=root
MARIADB_DATA=./mariadb/data
MARIADB_ENTRYPOINT_INITDB=./mariadb/docker-entrypoint-initdb.d
#MARIADB_CNF=./mariadb/mariadb.conf

### REDIS ##################################################
REDIS_PORT=6379

### MAIL ##################################################
SMTP_PORT=25
POP_PORT=110
SPOOL_POSTFIX=./nginx/postfix
MAILNAME=mail@example.com
MY_NETWORKS=0.0.0.0/0
ROOT_ALIAS=somebody@example.com
MY_DESTINATION=localhost
